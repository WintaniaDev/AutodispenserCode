<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <link
      href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css"
    />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
    <!-- <script src="javascripts/login.js"></script> -->
  </head>
  <body>
    <div class="container-fluid">
      <br /><br />
      <center>
        <div class="card col col-lg-5">
          <div class="card-header">
            <h1>Create an your account</h1>
          </div>
          <div class="card-body">
            <form action="/createUser" method="post">
              <div class="form-group">
                <label for="Email">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  aria-describedby="emailHelp"
                  placeholder="Enter email"
                  required
                />
                <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password"
                  required
                />
              </div>
              <div class="form-row">
                <div class="col">
                  <label for="Firstname">Firstname</label>
                  <input
                    type="text"
                    class="form-control"
                    id="Firstname"
                    name="Firstname"
                    placeholder="Firstname"
                    required
                  />
                </div>
                <div class="col">
                  <label for="Lastname">Lastname</label>
                  <input
                    type="text"
                    class="form-control"
                    id="Lastname"
                    name="Lastname"
                    placeholder="Lastname"
                    required
                  />
                </div>
              </div>
              <div class="form-group " style="margin-top:15px">
                <label for="Telephone">Telephone Number</label>
                <input
                  type="tel"
                  pattern="+66-[0-9]{3}-[0-9]{4}-[0-9]{4}"
                  class="form-control"
                  id="Telephone"
                  name="Tel"
                  placeholder="Tel"
                  required
                />
              </div>
              <!-- <div class="form-group">
                <label for="Telephone">Profile Picture</label>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01"
                      >Upload</span
                    >
                  </div>
                  <div class="custom-file">
                    <input
                      type="file"
                      class="custom-file-input"
                      id="Userpic"
                      name="userpic"
                      aria-describedby="Userpic"
                    />
                    <label class="custom-file-label" for="Userpic"
                      >Choose file</label
                    >
                  </div>
                  <span id="status"></span>
                </div>
              </div> -->
              <button
                type="submit"
                class="btn btn-lg btn-primary"
                name="submit"
              >
                SIGN UP
              </button>
            </form>
          </div>

          <div class="card-footer text-muted">
            <div class="d-flex justify-content-center links">
              Have already an account?<a href="/signin" class="ml-2">Sign in</a>
            </div>
          </div>
        </div>
      </center>
    </div>
  </body>
</html>
